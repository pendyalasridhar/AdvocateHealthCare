                                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                                    <Grid Name="inputtileGrid"   Margin="0,5,0,5" Background="#EEEEEE">

                                    </Grid>
                                </ScrollViewer>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </PivotItem>
            </Pivot.Items>
        </Pivot>
    </Grid>
</Page>
